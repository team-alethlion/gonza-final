model Notification {
  id      String @id @default(cuid())
  title   String
  message String
  type    String // "TRANSFER", "ALERT", "INFO"

  read Boolean @default(false)

  // Link to Branch context (e.g. "You have a transfer at Branch B")
  branchId String?
  branch   Branch? @relation(fields: [branchId], references: [id])

  // Link to specific User (optional, if personal)
  userId String?
  user   User?   @relation(fields: [userId], references: [id])

